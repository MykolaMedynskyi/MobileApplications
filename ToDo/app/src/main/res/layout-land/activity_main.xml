<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <fragment android:layout_width="337dp" android:layout_height="match_parent"
              android:id="@+id/mainfragment"
              android:name="com.example.todo.fragmet_list"
              tools:layout="@layout/fragment_fragmet_list"
              android:layout_margin="10dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
              app:layout_constraintVertical_bias="0.0"/>

    <fragment android:layout_width="291dp" android:layout_height="match_parent"
              android:id="@+id/addTask"
              android:name="com.example.todo.add_task"
              tools:layout="@layout/fragment_add_task"
              android:layout_margin="2dp"
              android:layout_marginEnd="2dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="2dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="2dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@+id/mainfragment"
              android:layout_marginStart="4dp"/>

</android.support.constraint.ConstraintLayout>