<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/kek"
        tools:context=".MainActivity">
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button22"
            android:transitionName="22"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button12" app:layout_constraintStart_toEndOf="@+id/button21"
            android:layout_marginStart="8dp" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button20"
            android:transitionName="20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button10" app:layout_constraintEnd_toStartOf="@+id/button21"
            android:layout_marginEnd="8dp" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button21"
            android:transitionName="21"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button11" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="8dp" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button10"
            android:transitionName="10"
            app:layout_constraintEnd_toStartOf="@+id/button11"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button00" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button00"
            android:transitionName="00"
            app:layout_constraintEnd_toStartOf="@+id/button01"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button11" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button02"
            android:transitionName="02"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button12" app:layout_constraintStart_toEndOf="@+id/button11"
            android:layout_marginStart="8dp" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button12"
            android:transitionName="12"
            app:layout_constraintStart_toEndOf="@+id/button11"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button01" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button11"
            android:transitionName="11"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="buttonPressed"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="50sp"
            android:id="@+id/button01"
            android:transitionName="01"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button11" app:layout_constraintEnd_toStartOf="@+id/button02"
            android:layout_marginEnd="8dp" android:onClick="buttonPressed"/>

    <Button
            android:text="RESTART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRestart" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="restart" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button21"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/textViewTurn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button01"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/image" android:visibility="invisible">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:onClick="imagePressed"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>